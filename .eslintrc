{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
	"extends": [
    "plugin:react/recommended",
    "standard",
    "prettier"
	],
	"parserOptions": {
		"ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx":  true
    }
  },
  "plugins": [
    "react",
    "jest",
    "react-hooks",
    "prettier"
  ],
  "ignorePatterns": ["blueprint-templates/"],
	"rules": {
    "react/prop-types": 0,
    "react-hooks/exhaustive-deps": "warn"
  },
	"settings": {
		"react":  {
			"version": "detect"
		}
	}
}
